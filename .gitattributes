# Text files normalized to LF
*.py     text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf
*.css    text eol=lf
*.md     text eol=lf
*.json   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.sh     text eol=lf
*.mjs    text eol=lf
*.cjs    text eol=lf
*.html   text eol=lf
*.toml   text eol=lf

# Treat images and other binaries as binary (no EOL conversion)
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.svg    text eol=lf
*.ico    binary
*.pdf    binary

# Fonts
*.woff   binary
*.woff2  binary

# Archives
*.zip    binary
*.tar    binary
*.gz     binary
*.bz2    binary
*.7z     binary

# Keep lockfiles normalized but diffable
package-lock.json text eol=lf
poetry.lock       text eol=lf
